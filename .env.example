# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration
DATABASE_URL=your_database_connection_string

# App Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Payment Configuration (Future use)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Blockchain API Keys (Required for wallet balance reading)
# Get Etherscan API key: https://etherscan.io/apis
NEXT_PUBLIC_ETHERSCAN_API_KEY=your_etherscan_api_key

# Get BSCScan API key: https://bscscan.com/apis (or use same as Etherscan)
NEXT_PUBLIC_BSCSCAN_API_KEY=your_bscscan_api_key

# Get TronGrid API key: https://www.trongrid.io/
NEXT_PUBLIC_TRON_API_KEY=your_trongrid_api_key

# Get Solana RPC from Helius: https://www.helius.dev/
# Free tier: 100k requests/day
NEXT_PUBLIC_SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_helius_api_key

# Optional: BlockCypher for Bitcoin (has free tier without key)
NEXT_PUBLIC_BLOCKCYPHER_API_KEY=your_blockcypher_token

# Crypto Wallet Addresses (Production)
NEXT_PUBLIC_BTC_WALLET_ADDRESS=your_bitcoin_address
NEXT_PUBLIC_ETH_WALLET_ADDRESS=your_ethereum_address
NEXT_PUBLIC_BNB_WALLET_ADDRESS=your_bsc_bnb_address
NEXT_PUBLIC_SOL_WALLET_ADDRESS=your_solana_address
NEXT_PUBLIC_TRX_WALLET_ADDRESS=your_tron_address
NEXT_PUBLIC_XRP_WALLET_ADDRESS=your_xrp_address
NEXT_PUBLIC_XRP_DESTINATION_TAG=your_xrp_destination_tag